{
  "layer": "top",
  "position": "top",
  "margin-top": 13,

  "modules-left": [
    "clock",
    "mpris",
  ],

  "modules-center": [
    "hyprland/workspaces"
  ],

  "modules-right": [
    // "bluetooth",
    "tray",
    "custom/pacman",
    "custom/weather",
    "pulseaudio",
    "network",
    "battery",
    "backlight"
  ],

  "tray": {
    "icon-size": 18,
    "spacing": 10,
  },

  "custom/pacman": {
    "format": "{}",
    "interval": "once",
    "exec": "$HOME/.config/waybar/scripts/systemupdate.sh",
    "return-type": "json",
    "on-click": "hyprctl dispatch exec '$HOME/.config/waybar/scripts/systemupdate.sh up'",
    "signal": 8
  },

  "custom/media": {
    "format": "{icon}{}",
    "escape": true,
    "return-type": "json",
    "max-length": 40,
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl stop",
    "smooth-scrolling-threshold": 10, // This value was tested using a trackpad, it should be lowered if using a mouse.
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous",
    "exec": "$HOME/.config/waybar/scripts/mediaplayer.py 2> /dev/null" // Script in resources/custom_modules folder
  },

  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20
    },
    "format": "{icon}  {capacity}%",
    "format-charging": "<span color='#c3e88d'>Û±êã</span>  {capacity}%",
    "format-plugged": "Ôá¶  {capacity}%",
    "tooltip-format": "{time} left",
    "format-icons": ["Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
    "interval": 1
  },

  "clock": {
    "format": "Û∞•î   {:%I:%M %p}",
    "format-alt": "Û∞•î   {:%a, %d. %b  %I:%M %p}",
    "tooltip-format": "<span>{calendar}</span>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b>{}</b></span>"
      }     
    }
  },

  "pulseaudio": {
    "format": "{icon}   {volume}%",
    "format-bluetooth": "ÔÄ•    {volume}%",
    "format-muted": "Û∞ñÅ",
    "scroll-step": 1,
    "on-click": "pavucontrol",
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "ignored-sinks": ["Easy Effects Sink"],
    "format-icons": {
      "headphone": "ÔÄ•  ",
      "hands-free": "ÔÄ•  ",
      "headset": "Û∞ãé ",
      "phone": "ÔÇï ",
      "portable": "ÔÇï ",
      "car": "ÔÜπ",
      "default": ["Û∞ñÄ", "Û∞ïæ"]
    }
  },

  "network": {
    "format": "{ifname}",
    "format-wifi": "{icon}  {essid}",
    "format-ethernet": "Û∞àÄ   Ethernet",
    "format-disconnected": "Û∞§≠   disconnected",
    "max-length": 50,
    "format-icons": ["Û∞§Ø ", "Û∞§ü ", "Û∞§¢ ", "Û∞§• ", "Û∞§® "],
    "tooltip-format": "{essid}",
    "on-click": "nm-applet",
    "on-click-right": "killall nm-applet",
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "on-click": "activate", 
    "on-scroll-up": "~/.config/hypr/scripts/workspace.sh prev",
    "on-scroll-down": "~/.config/hypr/scripts/workspace.sh next",
    "format-icons": {
      "urgent": "Û∞Ä®",
      // "active": " ü¶Ü",
      "active": "ÔÜí",
      "default": "ÔÑë"
    },
    "sort-by-number": true
  },

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon}   {percent}%",
    "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
  },

  "custom/weather": {
    "exec": "${HOME}/.config/waybar/scripts/get_weather.sh Gandhinagar",
    "return-type": "json",
    "format": "{}",
    "tooltip": true,
    "interval": 3600
  },

  "bluetooth": {
    "format": "",
    "format-disabled": "",
    "format-connected": "Ôäì {num_connections}",
    "format-connected-battery": "{icon}  {num_connections}",
    "format-connected-battery": "{icon}  {device_alias}-{device_battery_percentage}%",
    "format-icons": ["Û∞•á", "Û∞§æ", "Û∞§ø", "Û∞•Ä", "Û∞•Å", "Û∞•Ç", "Û∞•É", "Û∞•Ñ", "Û∞•Ö", "Û∞•Ü", "Û∞•à"],
    "format-device-preference": [ "device1", "device2" ],
    "tooltip-format": "{controller_alias}\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}",

    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{icon} {device_battery_percentage}%",
    "max-length": 15
  },

  "mpris": {
    "format": "{player_icon} {dynamic}",
    "format-paused": "{status_icon} <i>{dynamic}</i>",
    "player-icons": { 
      "default": "Û∞éÜ  ",
      "mpv": "üéµ"
    },
    "status-icons": {
      "paused": "Ôäå "
    },
    "max-length": 20,
    "interval": 1
  },

  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "Û∞åæ ",
      "unlocked": "Ôãº "
    },
    "interval": 1
  },
}

